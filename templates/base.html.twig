<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}MyAGENDA{% endblock %}</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"
    />
    <link rel="stylesheet" href="{{ asset('styles.css') }}" />
    {% block stylesheets %} {% endblock %} {% block javascripts %} {% endblock
    %}
  </head>
  <body>
    <div class="header">
      {% if is_granted('ROLE_USER') %}
      <a
        href="{{ path('app_logout') }}"
        class="btn btn-primary btn-lg active my-5"
        role="button"
        aria-pressed="true"
        >Déconnexion</a
      >
      {% else %}
      <a
        href="{{ path('app_login') }}"
        class="btn btn-primary btn-lg active my-5"
        role="button"
        aria-pressed="true"
        >Connexion</a
      >
      <a
        href="{{ path('app_register') }}"
        class="btn btn-primary btn-lg active my-5"
        role="button"
        aria-pressed="true"
        >Inscription</a
      >
      {% endif %}
    </div>
    {% block body %}{% endblock %}
  </body>
</html>
